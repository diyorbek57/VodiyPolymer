<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_empty_state"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/il_no_data" />

    <TextView
        android:id="@+id/tv_title_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/generalsans_semibold"
        android:text="@string/no_data"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_message_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/generalsans_regular"
        android:text="@string/no_data_was_found"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>