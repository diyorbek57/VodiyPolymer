    //pdf reader

    <style name="Theme.PdfView.SelectedTheme" parent="@style/Theme.PdfView.Light">
        <item name="pdfView_actionBarTint">@color/white</item>
        <item name="pdfView_backIcon">@drawable/ic_arrow_left_line</item>
        <item name="pdfView_titleTextStyle">@style/Pdfviewer.Textview.Style</item>
        ...
    </style>

    <style name="Pdfviewer.Textview.Style" parent="@android:style/Widget.Material.TextView">
        <item name="android:fontFamily">@font/generalsans_semibold</item>
        <item name="android:textColor">@color/very_dark_gray_mostly_black</item>
    </style>
    //rating bar style

    <style name="reviewRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    //Bottomsheet theme

    <style name="DialogAnimaton">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottomsheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottomsheet</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/circler_imageView</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    //tab layout font style

    <style name="tab_layout_text_style" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/generalsans_medium</item>
    </style>
    //Circler image view styles

    <style name="circler_imageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_border_imageView_5">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="rounded_border_imageView_10">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="rounded_border_imageView_15">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="rounded_border_imageView_20">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="top_rounded_imageView">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="left_rounded_imageView">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="right_rounded_imageView">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    //badge style

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.MenuBadgeCount">
        <item name="android:textColor">@color/white</item>
