<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VodiyPolymer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_dark_gray_mostly_black</item>
        <item name="colorPrimaryVariant">@color/very_dark_gray_mostly_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_dark_gray_mostly_black</item>
        <item name="colorSecondaryVariant">@color/very_dark_gray_mostly_black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //Bottomsheet theme

    <style name="DialogAnimaton">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottomsheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottomsheet</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/circler_imageView</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    //tab layout font style
    <style name="tab_layout_text_style" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/generalsans_medium</item>
    </style>
    //Circler image view styles
    <style name="circler_imageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_border_imageView_5">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="rounded_border_imageView_10">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="rounded_border_imageView_15">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="rounded_border_imageView_20">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="top_rounded_imageView">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="left_rounded_imageView">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="right_rounded_imageView">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    //badge style
    <style name="MenuDrawer" />
    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.MenuBadgeCount">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

</resources>